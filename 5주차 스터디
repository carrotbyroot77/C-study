#include <stdio.h>

int main(void)
{
    int n = 5;

    for (int i = 0; i < n; ++i){
        for (int bl = 0; bl < i; ++bl)//bl == 공백
            printf(" ");
        for (int sta = 0; sta < n - i; ++sta) // sta == 별
            printf("*");

        printf("\n");
    }
    return 0;
}
